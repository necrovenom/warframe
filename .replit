modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["comma", "pyflyby", "wget"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "py"
mode = "sequential"
author = 6611549

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 app.py"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Web Server"

[[workflows.workflow]]
name = "Flask Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
